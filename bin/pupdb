#!/usr/bin/env ruby

$LOAD_PATH << File.expand_path("../../lib", __FILE__)

require 'hieracles'
require 'hieracles/options/pupdb'

opt = Hieracles::Options::Pupdb.new(ARGV)

if opt.options.has_key? :version
  puts Hieracles.version
  exit(0)
end

command = opt.payload[0]
args = opt.payload[2..-1]

unless command
  puts opt.usage
  exit(1)
end
